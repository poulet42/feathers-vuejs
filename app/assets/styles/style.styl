// Custom variables and overrides
// @import './variables';
@import '~bulma/css/bulma.css';
*,
*::before,
*::after
	box-sizing border-box
body,
html
	margin 0
	padding 0
	width 100%
	height 100%
	overflow-y hidden
h1, h2, h3, h4
	font-weight normal
	margin 0
p
	margin 0
input, textarea
	outline-style none
#app
	font-family 'Helvetica Neue', sans-serif
	color #666
	display flex
	flex-direction column
	height 100%
.main
	display flex
	flex 1
.view
	flex 1
	padding 20px
	background-color rgb(251, 251, 252)
