// Custom variables and overrides
// @import './variables';
@import '~bulma/css/bulma.css';
*,
*::before,
*::after
	box-sizing border-box
body,
html
	margin 0
	padding 0
	width 100%
	height 100%
	overflow-y hidden
h1, h2, h3, h4
	font-weight normal
	margin 0
p
	margin 0
input, textarea
	outline-style none
#app
	font-family 'Helvetica Neue', sans-serif
	color #666
	display flex
	flex-direction column
	height 100%
.main
	display flex
	flex 1
.view
	flex 1
	padding 20px
	background-color rgb(251, 251, 252)
.bump
	transition transform 0.2s
.bump:hover
	transform translateY(-10px)
	box-shadow 0px 3px 12px rgba(52,52,52,0.4)
.card.has-overlay
	overflow hidden
	&:hover .card-overlay
		opacity 1
		visibility visible
		transform translateY(0)
.card-overlay
	padding 20px
	position absolute
	opacity 0
	visibility hidden
	top 0
	left 0
	right 0
	bottom 0
	transform translateY(100%)
	transition all 0.5s
	&.is-black
		background-color rgba(22, 22, 22, 0.8)
		color #fff
	&.is-white
		background-color rgba(252, 252, 252, 0.99)
		color #333
	& .title, & .content
		color inherit
	& .content
		margin-top 20px
		font-size 12px
.card-meta
	position absolute
	z-index 1
	color #fff
	&.is-top-right
		top 10px
		right 10px
	&.is-bottom-left
		bottom 10px
		left 10px
	& .tag:not(:last-child)
		margin-right 10px
	& .tag:hover
		opacity 1
	& .tag
		opacity 0.7
		transition opacity 0.3s
		margin-bottom 10px
.image.is-4by6
	padding-bottom 150%
.is-layer-2
	position relative
	z-index 4
.card-content
	background-color #fff
	